<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="overtrue/pinyin Test Suite (All PHP version)">
            <directory>./tests/</directory>
            <exclude>./tests/GeneratorFileDictLoaderTest.php</exclude>
        </testsuite>
        <testsuite name="overtrue/pinyin GeneratorFileDictLoaderTest Test Suite (PHP >= 5.5)">
            <file>./tests/AbstractDictLoaderTestCase.php</file>
            <file phpVersion="5.5.0" phpVersionOperator=">=">./tests/GeneratorFileDictLoaderTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>
